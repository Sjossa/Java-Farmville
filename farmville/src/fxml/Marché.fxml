<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <TabPane prefHeight="500.0" prefWidth="700.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>


                <Tab text="Accueil">
                    <content>
                        <AnchorPane prefHeight="470.0" prefWidth="650.0" style="-fx-background-color: #e3f2fd; -fx-border-color: #42a5f5; -fx-border-width: 3; -fx-border-radius: 10;">
                            <children>
                                <VBox alignment="CENTER" layoutX="50.0" layoutY="80.0" spacing="30.0">
                                    <children>
                                        <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #0d47a1;" text="Bienvenue sur l'interface" />
                                        <Label style="-fx-font-size: 20; -fx-text-fill: #1565c0;" text="Découvrez toutes les fonctionnalités" />
                                        <Button style="-fx-font-size: 18; -fx-background-color: #42a5f5; -fx-text-fill: white; -fx-padding: 12px 24px; -fx-border-radius: 10px;" text="Explorer" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>



                <Tab text="Profil">
                    <content>
                        <AnchorPane prefHeight="470.0" prefWidth="650.0" style="-fx-background-color: #f3e5f5; -fx-border-color: #8e24aa; -fx-border-width: 3; -fx-border-radius: 10;">
                            <children>
                                <VBox alignment="CENTER" layoutX="50.0" layoutY="80.0" spacing="25.0">
                                    <children>
                                        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #6a1b9a;" text="Profil Utilisateur" />
                                        <Label style="-fx-font-size: 20; -fx-text-fill: #8e24aa;" text="Nom : Jean Dupont" />
                                        <Label style="-fx-font-size: 20; -fx-text-fill: #8e24aa;" text="Email : jean.dupont@example.com" />
                                        <Button style="-fx-font-size: 18; -fx-background-color: #8e24aa; -fx-text-fill: white; -fx-padding: 12px 24px; -fx-border-radius: 10px;" text="Modifier Profil" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>



                <Tab text="Paramètres">
                    <content>
                        <AnchorPane prefHeight="470.0" prefWidth="650.0" style="-fx-background-color: #ede7f6; -fx-border-color: #5e35b1; -fx-border-width: 3; -fx-border-radius: 10;">
                            <children>
                                <VBox alignment="CENTER" layoutX="50.0" layoutY="80.0" spacing="20.0">
                                    <children>
                                        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #311b92;" text="Paramètres de l'application" />
                                        <CheckBox style="-fx-font-size: 20;" text="Activer les notifications" />
                                        <ChoiceBox fx:id="languageChoiceBox" />
                                        <Button style="-fx-font-size: 18; -fx-background-color: #5e35b1; -fx-text-fill: white; -fx-padding: 12px 24px; -fx-border-radius: 10px;" text="Enregistrer" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>



                <Tab text="Aide">
                    <content>
                        <AnchorPane prefHeight="470.0" prefWidth="650.0" style="-fx-background-color: #fff3e0; -fx-border-color: #ff9800; -fx-border-width: 3; -fx-border-radius: 10;">
                            <children>
                                <VBox alignment="CENTER" layoutX="50.0" layoutY="80.0" spacing="20.0">
                                    <children>
                                        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #e65100;" text="Centre d'aide" />
                                        <Label style="-fx-font-size: 20; -fx-text-fill: #ff9800;" text="Consultez notre FAQ ou contactez le support." />
                                        <Button style="-fx-font-size: 18; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 12px 24px; -fx-border-radius: 10px;" text="FAQ" />
                                        <Button style="-fx-font-size: 18; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 12px 24px; -fx-border-radius: 10px;" text="Support" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
