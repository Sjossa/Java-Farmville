<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="plateau" alignment="CENTER" gridLinesVisible="true" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: peru;"
          xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlle.JardinageController">

    <!-- Définition des colonnes et des lignes pour la grille de jardin -->
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <!-- Zone 1 contenant des petites cases générées dynamiquement -->
    <GridPane fx:id="zone1" GridPane.columnIndex="5" GridPane.rowIndex="0"/>

    <!-- Zone 2 contenant des petites cases générées dynamiquement -->
    <GridPane fx:id="zone2" GridPane.columnIndex="5" GridPane.rowIndex="1"/>

    <GridPane fx:id="marché" GridPane.columnIndex="0" GridPane.rowIndex="0"/>


</GridPane>
